<Window x:Class="_01_IntroToWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_IntroToWPF"
        mc:Ignorable="d"
        Title="MyFirstWindow" Height="450" Width="800" Background="#FFCC9999">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Button FontSize="45" FontWeight="Bold" Background="Aqua" Grid.Column="0" >Click me</Button>
        <Button FontSize="45" FontWeight="Bold" Background="Green" Grid.Column="1" Grid.Row="1">Click me</Button>
        <Button FontSize="45" FontWeight="Bold" Background="Red" Grid.Column="2" >Click me</Button>
    </Grid>
</Window>
