<Window x:Class="_02_Controls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_02_Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Columns="4">
        <Border Background="Aqua" Padding="10">
            <Button Background="Red" FontSize="50">Hello</Button>
        </Border>
        
        <Button Background="Yellow" Margin="50,10,15,20"></Button>
        <Button Background="Blue" BorderThickness="10" BorderBrush="Pink"></Button>

        <Border Background="DarkGreen" CornerRadius="20">
            <Button Margin="10" Background="Lime"></Button>
        </Border>
    </UniformGrid>
</Window>
