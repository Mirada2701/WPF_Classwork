<Window x:Class="_06_ListBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06_ListBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Margin = "5" Padding = "5" Click="Button_Click">Add</Button>
            <Button Margin = "5" Padding = "5" Click="Button_Click_1">Remove</Button>
            <Button Margin = "5" Padding = "5" Click="Button_Click_2">Change</Button>
        </StackPanel>
        <ListBox SelectionMode="Extended" Name="list">
            <ListBoxItem IsSelected="True">Red</ListBoxItem>
            <ListBoxItem>Green</ListBoxItem>
            <ListBoxItem>Blue</ListBoxItem>
        </ListBox>
    </DockPanel>
</Window>
